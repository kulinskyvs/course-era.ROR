<h1>Searching a recipe with a keyword: <%= @search %></h1>

<table border="1">
	<tr>
		<th>Thumbnail</th>
		<th>Title</th>
		<th>Social rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr >
		<td><%= link_to(image_tag(recipe["image_url"], size:"100"), recipe["source_url"]) %></td>
		<td><%= link_to(raw(recipe["title"]), recipe["source_url"]) %></td>
		<td><%= recipe["social_rank"] %></td>
	</tr>
	<% end %>
</table>
